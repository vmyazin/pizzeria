---
import Layout from '../layouts/Layout.astro';
import aboutData from '../../content/about.json';
---

<Layout title="Our Story">
	<section class="about-section">
		<div class="about-card">
			<div class="about-image-placeholder">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="pizza-icon">
					<!-- Pizza icon -->
					<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
					<path d="M12 4v8l6 3"/>
				</svg>
			</div>
			<div class="about-content">
				<h1>{aboutData.title}</h1>
				<p>{aboutData.content}</p>
			</div>
		</div>
	</section>
</Layout>

<style>
	.about-section {
		padding: 2.5rem 0;
		animation: fadeIn 0.5s ease-out forwards;
	}
	.about-card {
		background: var(--bg-secondary);
		border: 1px solid var(--border);
		border-radius: 16px;
		overflow: hidden;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 0;
	}
	@media (max-width: 768px) {
		.about-card {
			grid-template-columns: 1fr;
		}
	}
	.about-image-placeholder {
		background: linear-gradient(135deg, #1f1f1f, #111111);
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-right: 1px solid var(--border);
	}
	.pizza-icon {
		width: 120px;
		height: 120px;
		color: var(--brand-accent);
		opacity: 0.5;
	}
	.about-content {
		padding: 2.5rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.about-content h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--brand-accent);
	}
	.about-content p {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--text-primary);
	}
	@keyframes fadeIn {
		from { opacity: 0; transform: translateY(20px); }
		to { opacity: 1; transform: translateY(0); }
	}
</style>
